<%- include('partials/header') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    .swal2-popup {
        font-family: 'Poppins', sans-serif !important;
        background-color: #fff !important;
        border-radius: 12px !important;
    }
    .swal2-title {
        color: var(--primary-teal) !important;
        font-weight: 700 !important;
    }
    .swal2-html-container {
        color: #555 !important;
        text-align: left !important;
        line-height: 1.8 !important;
    }
    .swal2-confirm {
        background-color: var(--primary-teal) !important;
        border-radius: 50px !important;
        padding: 10px 30px !important;
        box-shadow: none !important;
    }
    .swal2-confirm:focus {
        box-shadow: 0 0 0 3px rgba(0, 137, 152, 0.3) !important;
    }

    .hero-section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2px;
        background: #ccc;
    }
    .hero-card {
        position: relative;
        height: 450px;
        overflow: hidden;
        background: #000;
    }
    .hero-card img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: top center;
        filter: grayscale(100%) brightness(0.6);
        transition: 0.4s;
    }
    .hero-card:hover img {
        filter: grayscale(0) brightness(0.8);
        transform: scale(1.05);
    }
    .hero-content {
        position: absolute;
        bottom: 30px;
        width: 100%;
        text-align: center;
        color: #fff;
        padding: 0 15px;
        z-index: 2;
    }
    
    @media (max-width: 768px) {
        .hero-section {
            grid-template-columns: 1fr;
        }
        .hero-card {
            height: 400px;
        }
    }
</style>

<div class="hero-section">
    <div class="hero-card">
        <img src="https://files.catbox.moe/pdxjfn.png?q=80&w=1000" alt="Majelis">
        <div class="hero-content">
            <h3>Majelis Darul Hikmah</h3>
            <button class="btn" onclick="showInfo('majelis')" style="padding: 8px 30px; font-size: 0.9rem;">Mengenal</button>
        </div>
    </div>
    <div class="hero-card">
        <img src="https://files.catbox.moe/r0gcot.png?q=80&w=1000" alt="Ustad">
        <div class="hero-content">
            <h3>Ustad Khaliel Anwar</h3>
            <button class="btn" onclick="showInfo('ustad')" style="padding: 8px 30px; font-size: 0.9rem;">Mengenal</button>
        </div>
    </div>
    <div class="hero-card">
        <img src="https://files.catbox.moe/6omig5.png" alt="Buya">
        <div class="hero-content">
            <h3>Buya Dhiyauddin Kuswandhi</h3>
            <button class="btn" onclick="showInfo('buya')" style="padding: 8px 30px; font-size: 0.9rem;">Mengenal</button>
        </div>
    </div>
</div>

<div class="latest-section" id="latest-section">
    <div class="container">
        <div class="section-header">
            <h2>Latest Article</h2>
            <p>Ambil dan share yang sekiranya bermanfaat dari tulisan ini</p>
        </div>
        <div class="list-article-container">
            <% if (articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <a href="/article/<%= article._id %>" class="list-article-card">
                        <div class="list-article-thumb">
                            <img src="/uploads/images/<%= article.image %>" onerror="this.src='https://via.placeholder.com/300x200?text=Image'">
                        </div>
                        <div class="list-article-info">
                            <div>
                                <p class="meta"><%= article.category %></p>
                                <h4><%= article.title %></h4>
                                <p><%= article.content.replace(/(<([^>]+)>)/gi, "").substring(0, 100) %>...</p>
                            </div>
                            <div class="list-article-footer">
                                <div class="list-article-author">
                                    <%= article.author %>
                                    <span><%= new Date(article.publishedAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                </div>
                                <span class="read-more">Selengkapnya</span>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <p style="text-align: center; padding: 40px; background: #fff; border-radius: 8px;">Belum ada artikel untuk ditampilkan.</p>
            <% } %>
        </div>
        <div class="pagination">
            <% if (totalPages > 1) { %>
                <% if (currentPage > 1) { %>
                    <a href="/?page=<%= currentPage - 1 %>#latest-section" class="page-btn">Prev</a>
                <% } %>
                
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                        <span class="page-btn active"><%= i %></span>
                    <% } else { %>
                        <a href="/?page=<%= i %>#latest-section" class="page-btn"><%= i %></a>
                    <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <a href="/?page=<%= currentPage + 1 %>#latest-section" class="page-btn">Next</a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

