<div class="latest-section">
    <div class="container">
        <div class="section-header">
            <h2>Latest Article</h2>
            <p>Ambil dan share yang sekiranya bermanfaat dari tulisan ini</p>
        </div>
        
        <div class="list-article-container">
            <% if (articles.length > 0) { %>
                <% articles.forEach(article => { %>
                    <a href="/article/<%= article._id %>" class="list-article-card">
                        <div class="list-article-thumb">
                            <img src="/uploads/images/<%= article.image %>" alt="<%= article.title %>" onerror="this.src='https://via.placeholder.com/600x400?text=No+Image'">
                        </div>
                        <div class="list-article-info">
                            <div>
                                <p class="meta"><%= article.category %></p>
                                <h4><%= article.title %></h4>
                                <p><%= article.content.replace(/(<([^>]+)>)/gi, "").substring(0, 100) %>...</p>
                            </div>
                            <div class="list-article-footer">
                                <div class="list-article-author">
                                    <%= article.author %>
                                    <span><%= new Date(article.publishedAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                                </div>
                                <span class="read-more">SELENGKAPNYA</span>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <div style="grid-column: 1 / -1; text-align: center; padding: 40px; background: #f9f9f9; border-radius: 8px;">
                    <p>Belum ada artikel untuk ditampilkan.</p>
                </div>
            <% } %>
        </div>

        <div class="pagination">
            <% if (totalPages > 1) { %>
                <span class="page-btn">Page <%= currentPage %> of <%= totalPages %></span>
                <% if (currentPage > 1) { %>
                    <a href="/?page=<%= currentPage - 1 %>#latest-section" class="page-btn">Prev</a>
                <% } %>

                <% for(let i = 1; i <= totalPages; i++) { %>
                    <% if (i === currentPage) { %>
                        <span class="page-btn active"><%= i %></span>
                    <% } else { %>
                        <a href="/?page=<%= i %>#latest-section" class="page-btn"><%= i %></a>
                    <% } %>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <a href="/?page=<%= currentPage + 1 %>#latest-section" class="page-btn">Next</a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

