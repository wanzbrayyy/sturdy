<div class="youtube-section" id="youtube" style="background-image: url('/uploads/theme/background_youtube.jpg');">
    <div class="container">
        <div class="section-header">
            <a href="https://www.youtube.com/@Anwarkhaliel" target="_blank" style="color: #fff;">
                <h2>Youtube</h2>
            </a>
        </div>
        <div class="youtube-grid">
            <% youtubes.forEach(yt => { %>
                <div class="yt-card">
                    <iframe width="100%" height="200" src="https://www.youtube.com/embed/<%= yt.videoId %>" title="<%= yt.title %>" frameborder="0" allowfullscreen loading="lazy"></iframe>
                </div>
            <% }) %>
        </div>
    </div>
</div>

