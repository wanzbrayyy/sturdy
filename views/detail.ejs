<%- include('partials/header') %>

<style>
    .detail-container {
        max-width: 850px;
        margin: 40px auto;
        padding: 40px;
        background: var(--white);
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    }
    .detail-header {
        text-align: center;
        margin-bottom: 30px;
        border-bottom: 1px solid var(--medium-grey);
        padding-bottom: 30px;
    }
    .detail-header h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.3;
        color: var(--dark-grey);
        margin-top: 15px;
    }
    .detail-meta {
        font-size: 0.8rem;
        color: #888;
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 15px;
    }
    .detail-meta span {
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .detail-image-wrapper {
        width: 100%;
        aspect-ratio: 16 / 9; /* Menjaga gambar tetap proporsional */
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 40px;
        background-color: var(--light-grey);
    }
    .detail-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .article-body {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #444;
        white-space: pre-wrap; /* Agar enter berfungsi */
    }
    .comment-section {
        margin-top: 50px;
        padding-top: 30px;
        border-top: 1px solid var(--medium-grey);
    }
    .comment-item {
        background: var(--light-grey);
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        border-left: 4px solid var(--primary-teal);
    }

    @media (max-width: 768px) {
        .detail-container {
            padding: 20px;
            margin: 20px auto;
        }
        .detail-header h1 {
            font-size: 1.8rem;
        }
        .article-body {
            font-size: 1rem;
        }
    }
</style>

<div class="container">
    <div class="detail-container">
        
        <div class="detail-header">
            <span style="background: rgba(0, 137, 152, 0.1); padding: 6px 18px; border-radius: 50px; font-size: 0.75rem; font-weight: 600; color: var(--primary-teal); text-transform: uppercase;"><%= article.category %></span>
            <h1><%= article.title %></h1>
            <div class="detail-meta">
                <span><i class="fas fa-user"></i> <%= article.author %></span>
                <span><i class="fas fa-calendar-alt"></i> <%= new Date(article.publishedAt).toLocaleDateString('id-ID') %></span>
                <span><i class="fas fa-eye"></i> <span id="view-count"><%= article.views %></span> Views</span>
            </div>
        </div>

        <div class="detail-image-wrapper">
            <img src="/uploads/images/<%= article.image %>" onerror="this.src='https://via.placeholder.com/800x450'" alt="<%= article.title %>">
        </div>

        <article class="article-body">
            <%- article.content.replace(/\n/g, '<br>') %>
        </article>

        <div class="comment-section">
            <h3 style="margin-bottom: 25px; font-weight: 600;">Diskusi & Komentar</h3>
            
            <form id="comment-form" style="margin-bottom: 40px;">
                <div class="form-group">
                    <input type="text" id="name-input" class="form-control" placeholder="Nama Anda" required>
                </div>
                <div class="form-group">
                    <textarea id="text-input" class="form-control" placeholder="Tulis komentar Anda di sini..." rows="4" required></textarea>
                </div>
                <button type="submit" class="btn">Kirim Komentar</button>
            </form>

            <div id="comment-list">
                <% comments.forEach(comment => { %>
                    <div class="comment-item">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <strong style="color: #333;"><%= comment.name %></strong>
                            <small style="font-size: 0.75rem; color: #999;"><%= new Date(comment.createdAt).toLocaleDateString('id-ID') %></small>
                        </div>
                        <p style="margin: 0; font-size: 0.95rem;"><%= comment.text %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<script>
    const ARTICLE_ID = '<%= article._id %>';
</script>
<%- include('partials/footer') %>