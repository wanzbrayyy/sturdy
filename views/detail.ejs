<%- include('partials/header') %>

<style>
    .detail-page-wrapper {
        padding: 40px 0;
        background-color: var(--white);
    }
    .detail-container {
        max-width: 850px;
        margin: 0 auto;
        padding: 0;
    }
    .detail-header {
        text-align: center;
        padding: 20px;
        margin-bottom: 20px;
    }
    .detail-category-badge {
        display: inline-block;
        background: rgba(0, 137, 152, 0.1);
        padding: 6px 18px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--primary-teal);
        text-transform: uppercase;
    }
    .detail-header h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 2.2rem;
        font-weight: 700;
        line-height: 1.4;
        color: var(--dark-grey);
        margin: 20px 0 15px;
    }
    .detail-meta {
        font-size: 0.8rem;
        color: #888;
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }
    .detail-meta span {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .detail-image-wrapper {
        width: 100%;
        aspect-ratio: 16 / 9;
        background-color: var(--light-grey);
        margin-bottom: 30px;
    }
    .detail-image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .article-body {
        padding: 0 20px;
        font-size: 1.1rem;
        line-height: 1.9;
        color: #333;
        white-space: pre-wrap;
    }
    .comment-section-wrapper {
        background-color: var(--light-grey);
        margin-top: 50px;
        padding: 50px 0;
    }
    .comment-section {
        max-width: 850px;
        margin: 0 auto;
        padding: 0 20px;
    }
    .comment-section h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--dark-grey);
        margin-bottom: 30px;
        text-align: center;
    }
    .comment-form .form-control {
        background-color: var(--white);
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        font-size: 1rem;
        font-family: 'Poppins', sans-serif;
    }
    .comment-form .form-control:focus {
        outline: none;
        border-color: var(--primary-teal);
        box-shadow: 0 0 0 3px rgba(0, 137, 152, 0.2);
    }
    .comment-form .btn {
        width: 100%;
        padding: 15px;
        font-size: 1rem;
        box-shadow: 0 5px 15px rgba(40, 170, 225, 0.3);
    }
    .comment-item {
        background: var(--white);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    .comment-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    .comment-author {
        font-weight: 700;
        color: #333;
    }
    .comment-date {
        font-size: 0.75rem;
        color: #999;
    }
    .comment-text {
        margin: 0;
        font-size: 0.95rem;
        color: #555;
    }

    @media (max-width: 768px) {
        .detail-header h1 {
            font-size: 1.6rem;
        }
        .article-body {
            font-size: 1rem;
        }
    }
</style>

<div class="detail-page-wrapper">
    <div class="detail-container">
        <div class="detail-header">
            <span class="detail-category-badge"><%= article.category %></span>
            <h1><%= article.title %></h1>
            <div class="detail-meta">
                <span><i class="fas fa-user-edit"></i> <%= article.author %></span>
                <span><i class="fas fa-calendar-alt"></i> <%= new Date(article.publishedAt).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                <span><i class="fas fa-eye"></i> <span id="view-count"><%= article.views %></span> Views</span>
            </div>
        </div>
        <div class="detail-image-wrapper">
            <img src="/uploads/images/<%= article.image %>" onerror="this.src='https://via.placeholder.com/800x450'" alt="<%= article.title %>">
        </div>
        <article class="article-body">
            <%- article.content.replace(/\n/g, '<p style="margin-bottom: 1.5em;"></p>') %>
        </article>
    </div>
</div>

<div class="comment-section-wrapper">
    <div class="comment-section">
        <h3>Diskusi & Komentar</h3>
        <form id="comment-form" class="comment-form">
            <div class="form-group">
                <input type="text" id="name-input" class="form-control" placeholder="Nama Anda" required>
            </div>
            <div class="form-group">
                <textarea id="text-input" class="form-control" placeholder="Tulis komentar Anda di sini..." rows="5" required></textarea>
            </div>
            <button type="submit" class="btn">Kirim Komentar</button>
        </form>
        <div id="comment-list" style="margin-top: 40px;">
            <% comments.forEach(comment => { %>
                <div class="comment-item">
                    <div class="comment-header">
                        <strong class="comment-author"><%= comment.name %></strong>
                        <small class="comment-date"><%= new Date(comment.createdAt).toLocaleDateString('id-ID') %></small>
                    </div>
                    <p class="comment-text"><%= comment.text %></p>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    const ARTICLE_ID = '<%= article._id %>';
</script>

<%- include('partials/footer') %>