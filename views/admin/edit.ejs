<%- include('../partials/header') %>
<div class="container" style="max-width: 800px; padding-top: 40px; padding-bottom: 60px;">
    <h2>Edit Artikel</h2>
    <form action="/admin/update/<%= article._id %>?_method=PUT" method="POST" enctype="multipart/form-data" style="margin-top: 20px;">
        <div class="form-group">
            <label>Judul</label>
            <input type="text" name="title" class="form-control" value="<%= article.title %>" required>
        </div>
        <div class="form-group">
            <label>Kategori</label>
            <input type="text" name="category" class="form-control" value="<%= article.category %>">
        </div>
        <div class="form-group">
            <label>Gambar Saat Ini</label><br>
            <img src="/uploads/images/<%= article.image %>" style="width: 200px; height: auto; border: 1px solid #ddd;">
        </div>
        <div class="form-group">
            <label>Ganti Gambar (Opsional)</label>
            <input type="file" name="image" class="form-control">
        </div>
        <div class="form-group">
            <label>Konten</label>
            <textarea name="content" class="form-control" rows="15" required><%= article.content %></textarea>
        </div>
        <button type="submit" class="btn" style="background: #008998; color: #fff;">Update</button>
        <a href="/admin" style="margin-left: 15px;">Batal</a>
    </form>
</div>
<%- include('../partials/footer') %>