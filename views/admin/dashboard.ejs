<%- include('../partials/header') %>
<div class="container" style="padding-top: 40px; padding-bottom: 60px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 15px;">
        <h2>Admin Dashboard</h2>
        <div>
            <a href="/admin/create" class="btn" style="background: #008998; color: #fff; margin-right: 10px;">+ Artikel Baru</a>
            <a href="/admin/import" class="btn" style="background: #28a745; color: #fff;">Impor XML</a>
        </div>
    </div>

    <% if(success_msg != '') { %>
        <div class="alert alert-success"><%= success_msg %></div>
    <% } %>

    <div style="overflow-x: auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>Judul</th>
                    <th>Kategori</th>
                    <th>Tanggal Publikasi</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.title %></td>
                        <td><%= article.category %></td>
                        <td><%= new Date(article.publishedAt).toLocaleDateString('id-ID') %></td>
                        <td style="white-space: nowrap;">
                            <a href="/admin/edit/<%= article._id %>" class="btn" style="background: #ffc107; color: #212529;">Edit</a>
                            <form action="/admin/delete/<%= article._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Hapus artikel ini?')">
                                <button type="submit" class="btn btn-danger">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('../partials/footer') %>