<%- include('../partials/header') %>
<div class="container" style="max-width: 800px; padding-top: 40px; padding-bottom: 60px;">
    <h2>Buat Artikel Baru</h2>
    <form action="/admin/store" method="POST" enctype="multipart/form-data" style="margin-top: 20px;">
        <div class="form-group">
            <label>Judul</label>
            <input type="text" name="title" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Kategori</label>
            <input type="text" name="category" class="form-control" value="Umum">
        </div>
        <div class="form-group">
            <label>Gambar Utama</label>
            <input type="file" name="image" class="form-control">
        </div>
        <div class="form-group">
            <label>Konten</label>
            <textarea name="content" class="form-control" rows="15" required></textarea>
        </div>
        <button type="submit" class="btn" style="background: #008998; color: #fff;">Simpan</button>
        <a href="/admin" style="margin-left: 15px;">Batal</a>
    </form>
</div>
<%- include('../partials/footer') %>